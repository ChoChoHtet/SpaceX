<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spacex" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CommonLabelStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:paddingTop">@dimen/common_padding</item>
        <item name="android:paddingBottom">@dimen/common_padding</item>
        <item name="android:paddingStart">@dimen/common_padding</item>
        <item name="android:paddingEnd">@dimen/common_padding</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>
    <style name="CardViewShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>